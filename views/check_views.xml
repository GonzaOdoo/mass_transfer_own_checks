<odoo>
    <data>
        <!-- Form View del Wizard -->
        <record id="view_account_check_deposit_wizard_form" model="ir.ui.view">
            <field name="name">account.check.deposit.form</field>
            <field name="model">account.check.deposit</field>
            <field name="arch" type="xml">
                <form string="Depositar Cheque">
                    <group>
                        <group>
                             <field name="journal_id" required="1"/>
                        </group>
                        <group>
                             <field name="date" required="1"/>
                        </group>
                        <field name="check_id" options="{'no_create': True}" required="1" invisible="1"/>
                        <field name="amount" readonly="1" invisible="1"/>
                       
                    </group>
                    <notebook>
                        <page string="Cheques">
                            <field name="check_ids" readonly="1">
                                <tree>
                                    <field name="date"/>
                                    <field name="l10n_latam_check_payment_date"/>
                                    <field name="journal_id"/>
                                    <field name="l10n_latam_check_number" string="Nro Cheque"/>
                                    <field name="amount_signed"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_deposit" type="object" string="Depositar" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="view_account_own_check_tree_inherited" model="ir.ui.view">
            <field name="name">account.payment.check.deposit.tree.inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="l10n_latam_check.view_account_own_check_tree"/>
            <field name="priority">5</field>
            <field name="arch" type="xml">
                <!-- Inserta tu campo después del último campo o donde desees -->
                <xpath expr="//header" position="inside">
                        <button name="action_open_deposit_wizard" type="object" string="Transferir"/>
                </xpath>
            </field>
        </record>

        <!-- Acción para abrir el Wizard -->
        <record id="action_account_check_deposit_wizard" model="ir.actions.act_window">
            <field name="name">Depositar Cheque</field>
            <field name="res_model">account.check.deposit</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_view_types">form</field>
        </record>

    </data>
</odoo>